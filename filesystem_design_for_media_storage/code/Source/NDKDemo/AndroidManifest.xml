<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.marakana"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:persistent="false">
        <activity
            android:name=".NDKDemoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".storefile"></activity>
        <activity android:name=".deletefile"></activity>
        <activity android:name=".readfile"></activity>
        <activity android:name=".data"></activity>
        <activity android:name=".imageData"></activity>
    </application>

</manifest>